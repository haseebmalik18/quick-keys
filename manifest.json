{
  "manifest_version": 3,
  "name": "Quickeys - Custom Keyboard Shortcuts",
  "version": "0.0.1",
  "description": "Create and configure custom keyboard shortcuts for your browser",

  "permissions": ["storage"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}